@model DeleteViewModel

@{
    ViewBag.Title = "Delete";
}

<article>
    <h1>Delete Post?</h1>
    <h2>Are you sure you want to delete '@this.Model.Title'?</h2>
    @using (this.Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Slug)
        <input type="submit" value="Yes" />
        <input type="button" value="No" id="no" onclick="window.history.back()" />
    }
</article>
